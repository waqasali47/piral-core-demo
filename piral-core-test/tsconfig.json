{
    "compilerOptions": {
    "outDir": "./lib",
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": false,
      "jsx": "react",
      "noLib": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "target": "es5",
      "sourceMap": true,
      "lib": ["es6", "dom", "esnext", "dom", "es2015", "es2018"],
      "importHelpers": true
    },
    "include":[
        "src"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "lib"
    ]
}
